<div class="centered-container">
  <div class="wrapper">
    <div class="user-card">
      <img src="https://via.placeholder.com/250" alt="">
    </div>
    <div>
      <h1>Username: <%= @user.username %></h1>
      <p>email: <%= @user.email %></p>


      <% if @user.role %>
        <p>role: <%= @user.role %> </p>
      <% else %>
        <p>role not specified</p>
      <% end %>
    </div>
    <div>
    
    <%= link_to "home", root_path, class:"btn btn-primary" %>
      <% if params.include?(:event_id) %>
      <%= link_to "back to buddies", event_users_path, class:"btn btn-primary"  %>
    <% else %>
      <%= link_to "all buddies", users_path, class:"btn btn-primary" %>
    <% end %>

    <% if params[:event_id] %>
     <%= link_to "Invite to this event", new_event_user_invite_path( params[:event_id], params[:id]), class:"btn btn-danger" %>
    <% else %>
      <%= link_to "invite to dance", user_events_path(@user), class:"btn btn-danger" %>
    <% end%>
  </div>
</div>
</div>