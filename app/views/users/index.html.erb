


<div class="users-index-main">

<div class="sidebar user-index-side">
  <ul>
    <li>
      <a href="#">
      <i class="fa fa-user fa-2x"></i>
      <span class="nav-text">
        Add a User
      </span>
      </a>  
    </li>
  </ul>
</div>
      <div class="users-grid">
        <% @users.each do |user| %>
            <div class="card-user" data-toggle="modal" data-target="#myModal_<%= user.id %>" data-tilt data-tilt-max="5" data-tilt-axis="y">
              <%= link_to user_path(user, event: @event, group: @group) do %>
              <% if user.photo.attached?%>
                <%= cl_image_tag user.photo.key, height: 370, width: 370, crop: :fill %>
              <% else %>
                <%= image_tag('profile-pic.jfif') %>
              <% end %>
                <%# <img src="https://via.placeholder.com/370"> %>
              <% end %>
              <div class="card-user-infos">
                <div class="card-user-infos-name">
                  <h2> <%= link_to user.username, user_path(user, event: @event, group: @group) %></h2>
                </div>
                  <div class="card-user-infos-role">
                  <% if user.role %>
                      <p><%=icon('fas', 'praying-hands')%> <%= user.role %> </p>
                    <% else %>
                      <p>role not specified</p>
                    <% end %>
                  </div>

                  <div class="card-user-infos-status">
                    <% if user.status %>
                      <status-text><%= user.status %></status-text>
                    <% else %>
                      <p>role not specified</p>
                    <% end %>
                 </div>

                  <div class="card-user-infos-style">
                  <% if user.style %>
                    <p><%=icon('fas', 'shoe-prints')%> <%= user.style %> </p>
                  <% else %>
                    <p>style not specified</p>
                  <% end %>
                </div>
                
                <div class="card-user-infos-level">
                  <div class = "lev">
                    <%= user.level%>
                  </div>
                  <p>lvl</p>
                </div>
              </div>
            </div>
          <% end %>
      </div>

      <div id="map"
        class="users-map"
        <%# style="height: 500px; width: 576px;" %>
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div> 

</div>



