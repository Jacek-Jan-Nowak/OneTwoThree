<% @events.each do |event| %>
              <div class="modal fade" id="myModal_<%= event.id %>" tabindex="-1" role="dialog" aria-labelledby="popupLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                  <div class="modal-content popup">
                    <div class="modal-header">
                      <h3 class="modal-title" id="popupLabel"><%= event.name %></h3>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      <h4><%= event.name  %></h3>
                      <p> <%= event.place.name %> </p>
                      <p> <%= event.place.address %> </p>
                      <p> <%= event.start_time %> </p>
                    </div>
                    <div class="modal-footer">
                      <%= link_to "See Event", event_path(event, user: @invitee ), class: "modal-button" %>
                    </div>
                  </div>
                </div>
              </div>
<% end %>
