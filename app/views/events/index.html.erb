<div class="events-index-main">
  <div class="sidebar event-index-side">
    <ul>
    <li>
      <a href="#">
      <i class="fa fa-calendar fa-2x"></i>
      <span class="nav-text">
        Add an Event
      </span>
      </a>  
    </li>
  </ul>
  </div>
  <div class="events-grid">
    <% @events.each do |event| %>
      <div class="card-event" data-toggle="modal" data-target="#myModal_<%= event.id %>" data-tilt data-tilt-max="5" data-tilt-scale="1.1" data-tilt-glare>
          <% if event.photo.present? %>
            <%= cl_image_tag event.photo.key, height: 120, width: 120, crop: :fill %>
          <% else %>
            <img src="../../assets/def.jpg" alt="" height= "120" width= "120">
          <% end %>
        <div class="card-event-infos">
          <h3> <strong> <%= link_to event.name, event_path(event, user: @invitee ) %> </strong></h3>
      
          <p>Event Type: <%= event.event_type %></p>
          <p>Place: <strong> <%= event.place.name.truncate(27, separator: ' ') %> </strong> </p>
          starting at: <strong> <%= event.start_time.strftime("%B %d, %Y %A") %> </strong>
        </div>
      </div>
    <% end %>
  </div>

<div id="map"
  class="events-map"
  <%# style="height: 500px; width: 576px;" %>
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
