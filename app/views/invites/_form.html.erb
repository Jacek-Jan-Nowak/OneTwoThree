<%= simple_form_for [@invite] do |f| %> 
  <%= f.input :message, as: :text, input_html: {rows: 10, cols: 10} %>
  <%= f.hidden_field :event, value: @event %>
    <%= f.hidden_field :user, value: @user %>
     <%= f.hidden_field :current_user, value: @current_user %>
  <%= f.submit "Submit invite", class: "btn btn-primary" %>
<% end %>
