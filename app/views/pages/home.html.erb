
  <div class="home-card">
    <div  class="home-title">
      <h1 id="dancing_buddies">Let's dance?</h1>
    </div>

    <div class="home_search_bar">
      <%= form_tag search_index_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Search here..."
        %>
         <%= submit_tag "Search", class: " search-button" %>
        <%#= select_tag "options", options_for_select(['Buddies', 'Events'], ''), class:"select-options"%>
          <%= check_box("Buddies", @user, {checked: false}) %>  
          <%= label_tag "Events" %> 
          <%= check_box("events", @event, {checked: false}) %>
          <%= label_tag "Users" %>
         
        <% end %> 
    </div>

    <div class="home_buttons">

      <div class="main_BUDDY">
        <%= link_to "Find a buddy!", users_path %>
      </div>

      <div class="main_EVENT">
        <%= link_to "Find events!", events_path %>
      </div>

    </div>
  </div>



