
<div class="group-grid-container">

    <div class="sidebar group-show-side">
      <ul>
        <%= link_to  events_path(group: @group) do %>
          <li>
              <i class="fa fa-glass-cheers fa-2x"></i>
                <span class="nav-text">
                  All Events
                </span> 
          </li>
        <% end%>

      <%= link_to users_path(group: @group.id) do %>
        <li>
            <i class="fa fa-users fa-2x"></i>
              <span class="nav-text">
                Invite a Friend
              </span>  
        </li>
        <% end %>

      </ul>
      </div>



  <div class = "group-show-data">
    <h1>Group name: <%= @group.name %></h1>
    <p>created by: <%= @group.owner.username %></p>
    <p>place: <%= @group.event.place.name %></p>
    <p>address: <%= @group.event.place.address %></p>
    <p>event: <%= @group.event.name %></p>
    <img src="https://via.placeholder.com/370">
  </div>

  <div class = "group-chat">
  <div class="chatroom">
    <div id="messages" data-chatroom-id="<%= @chatroom.id %>">
      <% @chatroom.messages.each do |message| %>
        <%= render 'messages/message', message: message %>
      <% end %>
    </div>
</div>
    <div class = "chatroom-input">
      <%= simple_form_for [ @group, @chatroom, @message ], remote: true do |f| %>
        <%= f.input :content, label: false %>
      <% end %>
    </div>

  </div>



  <div class="group-event-picture">
    <%= cl_image_tag @group.event.photo.key, height: 370, width: 370, crop: :fill %>
  </div>

  <div class="group-people-coming">
    <h3> group-people-coming </h3>
    <div>
     <%# <%= link_to "Add a user", users_path(group: @group.id), class:"btn btn-primary" %>
     
      <%= @group.invites.each do |invite| %>
      <div class="group-people-card">
        <%= cl_image_tag @group.owner.photo.key, height: 200, width: 200, crop: :fill, gravity: :face %>
        <p> <%= invite.invitee.username %> </p>
      </div>
       <% end %>

    </div>
  </div>
</div>
