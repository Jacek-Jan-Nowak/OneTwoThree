.home_buttons {
  position: relative;
  display: flex;
  align-items: center;
}

.home_buttons .main_BUDDY {
  position: relative;
  width: 100%;
  height: calc(30px + 4vw);
}

.home_buttons .main_BUDDY input {
position: absolute;
top: 0;
left: 0;
width: 100%;
height: 100%;
display: flex;
justify-content:center;
align-items: center;
background-color: rgba(255, 255, 255, 0.075);
border: 1px solid rgba(209, 213, 219, 0.3);
border-radius: 12px;
color: #fff;
z-index: 1;
font-size:calc(12px + 1.5vw);
text-decoration: none;
overflow: hidden;
transition: 0.5s;
backdrop-filter: blur(20px);
}


.main_BUDDY:hover input {
  letter-spacing: 3px;
  transition-delay: 0.3s;
  background: -webkit-linear-gradient(-45deg, #8741e6, #b2519f, #da5e58, #d8b46e);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.main_BUDDY input::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 50%;
  height: 100%;
  background: linear-gradient(to left, rgba(255,255,255,0.15),
  transparent);
  transform: skewX(45deg) translateX(0);
  transition: 0.5s;
}

.home_buttons .main_BUDDY:hover input::before {
  transform: skewX(45deg) translateX(200%);
}

.home_buttons .main_BUDDY::before {
  content: '';
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: -5px;
  width: 50px;
  height: 10px;
  background: #ffffff;
  border-radius: 10px;
  transition:  0.5s;
}
.home_buttons .main_BUDDY:hover::before {
  bottom: 50%;
  height: 50%;
  width: 100%;
  border-radius: 15px;
}

.home_buttons .main_BUDDY::after {
  content: '';
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: -5px;
  width: 50px;
  height: 10px;
  background: #ffffff;
  border-radius: 10px;
  transition: 0.5s;
}

.home_buttons .main_BUDDY:hover::after {
  top: 50%;
  height: 50%;
  width: 100%;
  border-radius: 15px;
}

.home_buttons .main_BUDDY:nth-child(1)::before,
.home_buttons .main_BUDDY:nth-child(1)::after
{
  background: #ffffff;
  box-shadow: 0 0 5px #ffffff,
  0 0 15px #ffffff,
  0 0 30px #ffffff,
  0 0 60px #ffffff;
}

